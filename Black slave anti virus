#!/bin/bash
filling=( '█▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '██▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '███▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '█████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '██████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '███████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '█████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '██████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '███████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '████████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '█████████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '██████████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '███████████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '████████████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '█████████████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '██████████████████▒▒▒▒▒▒▒▒▒▒▒▒▒▒' '███████████████████▒▒▒▒▒▒▒▒▒▒▒▒▒' '████████████████████▒▒▒▒▒▒▒▒▒▒▒▒' '█████████████████████▒▒▒▒▒▒▒▒▒▒▒' '██████████████████████▒▒▒▒▒▒▒▒▒▒' '███████████████████████▒▒▒▒▒▒▒▒▒' '████████████████████████▒▒▒▒▒▒▒▒' '█████████████████████████▒▒▒▒▒▒▒' '██████████████████████████▒▒▒▒▒▒' '███████████████████████████▒▒▒▒▒' '████████████████████████████▒▒▒▒' '█████████████████████████████▒▒▒' '██████████████████████████████▒▒' '███████████████████████████████▒' '████████████████████████████████' )
if [ $EUID == 0 ]; then
    echo "This nigger killer doesnt need root! it kills niggers without it"
    exit
fi
read -p "Do you want to scan niggers from this pc? (y/n) " yn
while true; do

case $yn in
	[yY] ) echo "Finding niggers right now."
		break;;
	[nN] ) echo "Alright exiting..."
		sleep 2s
		echo ""
		exit;;
	* ) echo "that isnt an option"
esac

done

for i in {1..100}
do
   printf "\r%s" "Nigger(s) found: ${i}"
   sleep 0.05
done
echo ""
read -p "${i} Nigger(s) was found total do you want to remove them? (y/n) " yn2
while true; do

case $yn2 in
	[yY] ) echo "Ok. running as root"
		break;;
	[nN] ) echo "Ok. exiting \n"
		sleep 2s
		exit;;
	* ) echo "that isnt an option"
esac

done

sleep 3s

echo "Doing sudo root right now."
for frame in "${filling[@]}"
do
  printf "\r%s" "${frame}"
  sleep 0.1
done
echo ""
echo "Ready to kill niggers. 8=|=====>"
sleep 2s
echo "Killing niggers"
for frame in "${filling[@]}"
do
  printf "\r%s" "${frame}"
  sleep 0.1
done
echo ""
echo "Killed ${i} Nigger(s)"
